{
  "name": "sser",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && yarn watch",
    "watch": "concurrently -k -p \"【 {name} 】 \" -n \"TS-Compiler,Node\" -c \"cyan.bold,green.bold\" \"yarn watch:ts\" \"yarn watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/server.js",
    "build": "tsc"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "tslint": "^5.3.2",
    "typescript": "^2.3.3"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.3",
    "@types/cookie-parser": "^1.3.30",
    "@types/express": "^4.0.35",
    "@types/node": "^7.0.22",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3"
  }
}
